<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/button_bar_vertical_spacing"
    android:layout_marginBottom="@dimen/button_bar_vertical_spacing"
    android:layout_height="wrap_content">
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:elevation="0dp"
        android:background="@android:color/transparent"
        android:id="@+id/delete_day_button"
        android:scaleType="fitXY"
        android:layout_margin="4dp"
        android:contentDescription="@string/accessibility_string_delete_workout_day"
        android:src="@drawable/ic_delete_24dp_color_primary"/>
    <Button
        android:id="@+id/day"
        tools:text="Monday"
        android:gravity="center"
        android:background="?colorPrimary"
        android:textColor="@android:color/white"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</LinearLayout>