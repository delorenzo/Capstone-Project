<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jdelorenzo.capstoneproject.ModifyWorkoutActivity"
    tools:showIn="@layout/activity_add_modify_workout">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:id="@+id/modify_workout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:visibility="gone"
            android:gravity="center"
            android:textAppearance="?textAppearanceLargePopupMenu"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/space_between_content_areas"
            android:id="@+id/empty_workout_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/empty_workout"/>

        <!--<ListView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--tools:listItem="@layout/item_workout_day">-->
        <!--</ListView>-->


        <ImageButton
            android:layout_marginRight="4dp"
            android:layout_marginBottom="@dimen/space_between_content_areas"
            android:id="@+id/delete_monday"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_delete_24dp_color_primary"/>

        <Button
            android:layout_toRightOf="@+id/delete_monday"
            android:id="@+id/monday"
            android:background="?colorPrimary"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_between_content_areas"
            android:text="Monday"/>

        <ImageButton
            android:layout_marginRight="4dp"
            android:layout_marginBottom="@dimen/space_between_content_areas"
            android:layout_below="@+id/delete_monday"
            android:id="@+id/delete_wednesday"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_delete_24dp_color_primary"/>

        <Button
            android:layout_toRightOf="@+id/delete_wednesday"
            android:id="@+id/wednesday"
            android:layout_below="@+id/monday"
            android:background="?colorPrimary"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_between_content_areas"
            android:text="Wednesday"/>

        <ImageButton
            android:layout_marginRight="4dp"
            android:layout_marginBottom="@dimen/space_between_content_areas"
            android:layout_below="@+id/delete_wednesday"
            android:id="@+id/delete_friday"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_delete_24dp_color_primary"/>

        <Button
            android:layout_toEndOf="@+id/delete_friday"
            android:layout_toRightOf="@+id/delete_friday"
            android:id="@+id/friday"
            android:layout_below="@id/wednesday"
            android:background="?colorPrimary"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_between_content_areas"
            android:text="Friday"/>



        <android.support.v4.widget.Space
            android:id="@+id/space"
            android:layout_below="@id/delete_friday"
            android:layout_width="wrap_content"
            android:layout_height="130dp" />

        <include layout="@layout/submit_button_bar"/>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
